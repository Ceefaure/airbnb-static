 <% flat = data.flats[owner] %>
<div class="flat-container">
  <div class="row">
    <div class="col-md-5">

      <!-- Inject flat data in template -->
      <%= image_tag flat.owner_picture, class: "avatar-xlarge" %>
      <h2><%= flat.owner_name %></h2>
      <h3><%= flat.description %></h3>
      <p><%= flat.city %></p>
    </div>

      <div class="col-md-4">
        <form action="#">
        <div class="col-wrapper">
          <div class="form-group">
            <h4>Book this flat</h4>
            <div class="row">
              <div class="col-md-6">
                <input type="checkin" class="form-control" placeholder="checkin" class="input-lg">
              </div>
              <div class="col-md-6">
                <input type="checkout" class="form-control" placeholder="checkout" class="input-lg">
              </div>
            </div>
          </div>
            <div class="form-group"></div>
              <select class="form-control">
                <option value="1">1 guest</option>
                <option value="2">2 guests</option>
                <option value="3">3 guests</option>
              </select>
              <input type="submit" value="Book it" class="btn btn-primary">
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

